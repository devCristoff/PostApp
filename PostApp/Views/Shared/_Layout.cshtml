@using Microsoft.AspNetCore.Http;
@using PostApp.Core.Application.DTOs.Account
@using PostApp.Core.Application.Enums
@using PostApp.Core.Application.Helpers;
@using PostApp.Core.Application.ViewModels.Users;
@inject IHttpContextAccessor httpContext;

@{
    var user = httpContext.HttpContext.Session.Get<AuthenticationResponse>("user");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PostApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PostApp.styles.css" asp-append-version="true" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="@(user != null ? "Home" : "User")" asp-action="Index"><i class="bi bi-camera-reels"></i> PostApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if(user != null)
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Friend" asp-action="Index">Friends</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="User" asp-action="UpdateProfile" asp-route-username="@user.UserName">My Profile</a>
                            </li>
                        </ul>

                        <div class="dropdown">
                            <a class="nav-link btn icon-md p-0 text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @user.UserName
                                <img class="profile-img rounded-circle" src="@user.ImageUrl" alt="@user.UserName">
                            </a>

                            <ul class="dropdown-menu dropdown-menu-lg-end">
                                <li><a class="dropdown-item" asp-controller="User" asp-action="UpdateProfile" asp-route-username="@user.UserName">My Profile</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="LogOut">Log Out</a></li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container bg-cyan">
            @DateTime.Now.Year - PostApp
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
